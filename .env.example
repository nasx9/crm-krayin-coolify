# Identidade
APP_NAME=Krayin CRM

# Ambiente
APP_ENV=production
APP_DEBUG=false
TZ=America/Sao_Paulo

# URLs
APP_URL=https://crm.catapultadigital.com.br
ASSET_URL=https://crm.catapultadigital.com.br

# Obrigatório (defina no Coolify)
# Gere com: php artisan key:generate --show
APP_KEY=

# Logs
LOG_CHANNEL=stack
LOG_LEVEL=info

# Proxy (Coolify/Traefik)
TRUSTED_PROXIES=*
FORCE_HTTPS=true

# Banco
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=krayin
DB_USERNAME=krayin
DB_PASSWORD=troque_esta_senha_forte
MYSQL_ROOT_PASSWORD=troque_esta_senha_root_forte

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Drivers
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Cookies e sessão (crítico para login)
SESSION_DOMAIN=crm.catapultadigital.com.br
SANCTUM_STATEFUL_DOMAINS=crm.catapultadigital.com.br

# Migrations no init: use true apenas no primeiro deploy e depois volte para false
RUN_MIGRATIONS=false
